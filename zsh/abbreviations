abbr "git aa"="git add --all"
abbr "git am"="git commit --amend -m %"
abbr "git ap"="git commit --amend --no-edit"
abbr "git br"="git branch"
abbr "git c"="git commit"
abbr "git cm"="git commit -m %"
abbr "git cmm"='GIT_AUTHOR_DATE="% %" GIT_COMMITTER_DATE="$GIT_AUTHOR_DATE" git commit -m %'
abbr "git co"="git checkout"
abbr "git d"="git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
abbr "git df"="git diff --color --color-words --abbrev"
abbr "git dfmain"="git log --no-merges main..%"
abbr "git fa"="git fetch --all"
abbr "git g"="git grep --break --heading --line-number"
abbr "git hreset"="git reset --hard HEAD"
abbr "git lo" = "git log --oneline"
abbr "git lg" = "git log --graph --pretty=format:'%>|(26) %C(yellow)%h %C(cyan)%ad %C(reset)%s%C(green)%d %C(bold blue)<%an>%C(reset)'"
abbr "git m"="git merge"
abbr "git p"="git push"
abbr "git pf"="git push --force-with-lease"
abbr "git pl"="git pull"
abbr "git pp"="git push -o ci.skip"
abbr "git r"="git reset"
abbr "git st"="git status"
abbr "git todo"="git grep --break --heading --line-number -e TODO -e FIXME"
abbr "git undo"="git reset HEAD~%"
abbr "git up"="git pull --rebase=preserve"

abbr "git a"="git forgit add"
abbr "git b"="git forgit blame"
abbr "git cp"="git forgit cherry_pick"
abbr "git cln"="git forgit clean"
abbr "git l"="git forgit log"
abbr "git rf"="git forgit checkout_file"
abbr "git rv"="git forgit revert_commit"
abbr "git sb"="git forgit checkout_branch"
abbr "git sc"="git forgit checkout_commit"
abbr "git sh"="git forgit show"
abbr "git sp"="git forgit stash_push"
abbr "git ss"="git forgit stash_show"

